# ============================================================================
# LEARNING PROTOTYPE - ENVIRONMENT CONFIGURATION
# ============================================================================
#
# Copy this file to .env and fill in your actual API keys
# Command: cp .env.example .env
#
# IMPORTANT: Never commit .env to git! It's in .gitignore for safety.
#
# ============================================================================

# ============================================================================
# ALPACA API (Paper Trading) - Week 1
# ============================================================================
# Get free paper trading keys at: https://alpaca.markets
# Sign up → Paper Trading → Dashboard → API Keys

ALPACA_API_KEY=pk_your_key_here
ALPACA_SECRET_KEY=sk_your_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================================================
# LLM APIs - Week 2
# ============================================================================

# Groq (Fast LLM - Free Tier: 30 req/min)
# Get key at: https://console.groq.com
GROQ_API_KEY=gsk_your_key_here

# Anthropic Claude (Smart LLM - Free: $5 credit)
# Get key at: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your_key_here

# ============================================================================
# TRADING SETTINGS
# ============================================================================

# ALWAYS keep paper trading enabled for learning!
PAPER_TRADING=true

# Maximum position size in dollars
MAX_POSITION_SIZE=10000.0

# Risk per trade (2% = 0.02 of portfolio)
RISK_PER_TRADE=0.02

# Maximum number of open positions
MAX_OPEN_POSITIONS=10

# Stop loss percentage (5% = 0.05)
STOP_LOSS_PERCENTAGE=0.05

# Take profit percentage (10% = 0.10)
TAKE_PROFIT_PERCENTAGE=0.10

# ============================================================================
# DATABASE SETTINGS - Week 3+
# ============================================================================

# PostgreSQL connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_db
DB_USER=trading_user
DB_PASSWORD=your_db_password_here

# Database URL (constructed from above)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================================================
# REDIS CACHE - Week 2+
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600

# ============================================================================
# KAFKA SETTINGS - Week 5+
# ============================================================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TRADES=trades
KAFKA_TOPIC_SIGNALS=signals
KAFKA_TOPIC_MARKET_DATA=market_data

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/trading.log

# Log to console
LOG_TO_CONSOLE=true

# Log format: json or text
LOG_FORMAT=text

# ============================================================================
# API SERVER SETTINGS
# ============================================================================

# Server host and port
API_HOST=0.0.0.0
API_PORT=8000

# Enable auto-reload in development
API_RELOAD=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# MONITORING - Week 7+
# ============================================================================

# Prometheus metrics port
PROMETHEUS_PORT=9090

# Enable monitoring
ENABLE_MONITORING=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable LLM signal generation
ENABLE_LLM_SIGNALS=true

# Enable advanced risk management
ENABLE_ADVANCED_RISK=true

# Enable market regime detection
ENABLE_REGIME_DETECTION=false

# Enable high-frequency features
ENABLE_HFT=false

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (DO NOT use in production!)
DEBUG=true

# API documentation enabled
ENABLE_DOCS=true

# Test mode (uses mock data)
TEST_MODE=false

# ============================================================================
# NOTES
# ============================================================================
#
# Week-by-Week Usage:
# - Week 1: Only ALPACA_* keys needed
# - Week 2: Add GROQ_API_KEY and ANTHROPIC_API_KEY
# - Week 3: Add DATABASE_URL
# - Week 5: Add KAFKA_* settings
# - Week 7: Add monitoring settings
#
# Cost Optimization:
# - Use Groq for simple tasks (nearly free)
# - Use Claude for complex reasoning
# - Enable caching to reduce API calls
# - Keep paper trading enabled!
#
# Security:
# - Never commit .env to git
# - Regenerate keys if accidentally exposed
# - Use different keys for development/production
# - Rotate keys regularly
#
# ============================================================================
