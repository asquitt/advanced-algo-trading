# API Keys (Replace with your actual keys)
# Get free tier at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alpaca Paper Trading (Free: https://alpaca.markets)
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Alpha Vantage for market data (Free tier: 25 calls/day)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_NEWS=market-news
KAFKA_TOPIC_FILINGS=sec-filings
KAFKA_TOPIC_SIGNALS=trading-signals

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=llm-trading-strategies

# PostgreSQL for trade storage
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_db
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=trading_pass

# Redis for caching (reduces API costs)
REDIS_HOST=localhost
REDIS_PORT=6379

# Trading Parameters
PAPER_TRADING=true
MAX_POSITION_SIZE=10000
RISK_PER_TRADE=0.02
TRADING_HOURS_ONLY=true

# LLM Cost Controls
MAX_TOKENS_PER_ANALYSIS=2000
CACHE_ANALYSIS_HOURS=24
USE_GROQ_FOR_SPEED=true  # Groq is faster and cheaper for most tasks
USE_ANTHROPIC_FOR_COMPLEX=true  # Use Claude for complex reasoning only

# Logging
LOG_LEVEL=INFO
